<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="300dp"
    android:layout_gravity="center"
    android:layout_height="400dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layoutDirection="ltr"
    android:gravity="start"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LayoutOfInputName"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/gradiant_corners"
        android:layout_centerInParent="true"
        android:layout_marginTop="85dp"
        >

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradiant_corners2"
        android:layout_marginTop="40dp"
        android:text="@string/resume"
        android:textColor="#FFF"
        android:textSize="25sp"
        />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/restartGame"
                android:background="@drawable/shape_round5"
                android:layout_margin="10dp"
                android:src="@drawable/ic_replay_black_24dp"
                />


            <com.example.simonsay.MusicOfGameButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/MusciButtonId"
                android:background="@drawable/shape_round2"
                android:layout_margin="10dp"
                android:src="@drawable/ic_volume_up_black_24dp"

                />



            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/HomeButton"
                android:layout_margin="10dp"
                android:src="@drawable/ic_home_black_24dp"
                android:background="@drawable/shape_round3"
                />
        </LinearLayout>
    </LinearLayout>


