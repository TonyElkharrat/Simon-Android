<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:gravity="start"
    android:background="@drawable/gradiant_list">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_margin="20dp"
        android:orientation="vertical">



        <ImageButton

            android:id="@+id/easyButtonId"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginTop="60dp"
            android:textAlignment="gravity"
            android:background="@drawable/simon_esay"
            android:textColor="#ffff"
             />

        <ImageButton

            android:id="@+id/meduimButtonID"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/simon_medium"
            android:textColor="#ffff" />


        <ImageButton

            android:id="@+id/hardButtonID"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/simon_hard"
            android:textColor="#ffff"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textAlignment="center"
            android:id="@+id/easy"
            android:layout_marginTop="90dp"
            android:layout_marginStart="25dp"
            android:text="EASY"
            android:fontFamily="@font/mm"
            android:textSize="30sp"
            android:textColor="#FFF"/>

        <TextView
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:padding="2dp"
            android:text="classic"
            android:textSize="15sp"
            android:textColor="#FFF"
            android:fontFamily="@font/mm"

            />


        <TextView
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:id="@+id/medium"
            android:layout_marginTop="95dp"
            android:text="MEDIUM"
            android:padding="3dp"
            android:fontFamily="@font/mm"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="#FFF"/>

        <TextView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:text="feeling good"
            android:fontFamily="@font/mm"
            android:textAlignment="center"
            android:layout_marginEnd="50dp"
            android:textColor="#FFF"
            android:textSize="15sp" />


        <TextView
            android:layout_width="170dp"
            android:layout_height="68dp"
            android:id="@+id/hard"
            android:layout_marginTop="60dp"
            android:layout_marginStart="28dp"
            android:text="HARD"
            android:textAlignment="center"
            android:fontFamily="@font/mm"
            android:padding="2dp"
            android:textSize="30sp"
            android:textColor="#FFF"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginStart="45dp"
            android:text="feeling expert"
            android:fontFamily="@font/mm"
            android:textColor="#FFF"
            android:textSize="15sp" />

    </LinearLayout>

</RelativeLayout>


